          <form action="/add_book/add" method="POST" col-lg-5-signin"  style = "width: 50%; margin-left: 25%; margin-top: 5%;">
            <div class="mb-3">
              <label for="title" class="form-label" style="margin-left: 44%;">Title</label>
              <input type="text" class="form-control" name="title" id="title" placeholder = "Enter Title of Book" required aria-describedby="emailHelp">
              <label for="title_error" class="form-label" id="title_error"></label>
            </div>
            <div class="mb-3">
              <label for="author" class="form-label" style="margin-left: 43%;">Author</label>
              <input type="text" class="form-control" name="author" id="author" placeholder = "Enter name of Author" required>
              <label for="author_error" class="form-label" id="author_error"></label>
            </div><br>
            <div class="mb-3">
                <label for="genre" class="form-label" >Genre</label>
                <select name="genre" id="genre" required>
                    <option value="Horror">Horror</option>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Fiction">Fiction</option>            
                    <option value="Drama">Drama</option>
                    <option value="Biogroahy">Biogrpahy</option>
                    <option value="Science Fiction">Science Fiction</option>
                    <option value="Autobiography">Autobiogrpahy</option>
                    <option value="Classic">Classic</option>
                    <option value="Children">Children</option>
                </select>
            </div>
            <br>
            <div class="mb-3">
                <label for="imgbook" class="form-label">Upload Book Image</label>
                <input type="file" name="image" id="imgbook" accept="image/*" required>
            </div><br>
              <div class="mb-3">
                <label for="description" class="form-label" style="margin-left: 41.5%;">Description</label>
                <input type="text" name="description" class="form-control" id="description" placeholder = "Enter a short Description" required>
              </div>
              <div>
                
              </div>
            <br>
            <button type="submit" class="btn btn-primary" style="margin-left: 40%;">Submit</button>
